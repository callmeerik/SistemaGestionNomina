@model SistemaGestionNomina.Models.CambiarRol

@{
    ViewBag.Title = "NuevoRol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cambiar Rol de Usuario</h2>

@using (Html.BeginForm("Index", "NuevoRol", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="Usuario">Usuario</label>
        @Html.TextBoxFor(m => m.Usuario, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="NuevoRol">Nuevo Rol</label>
        @Html.TextBoxFor(m => m.NuevoRol, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary mt-2">Cambiar Rol</button>
}

@if (!string.IsNullOrEmpty(ViewBag.Mensaje))
{
    <div class="alert alert-info mt-3">
        @ViewBag.Mensaje
    </div>
}
