@model SistemaGestionNomina.Models.HistorialSalario

@{
    ViewBag.Title = "Asignar Salario"; // 👈 Aquí sí funciona
}

<h2>Asignar Salario</h2>

<form method="post" action="@Url.Action("AsignarSalario", "Salarios")">
    <input type="hidden" name="emp_no" value="@Model.emp_no" />

    <div class="form-group">
        <label>Empleado</label>
        <input type="text" class="form-control"
               value="@Model.first_name @Model.last_name" readonly />
    </div>

    <div class="form-group">
        <label>Nuevo Salario</label>
        <input type="number" step="0.01" class="form-control" name="salario" required />
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a href="@Url.Action("Index", "Salarios")" class="btn btn-secondary">Cancelar</a>
</form>
