@model List<SistemaGestionNomina.Models.HistorialSalario>

@using System.Globalization;

@{
    ViewBag.Title = "Historial de Salarios";
}

<h2>Historial de Salarios</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Empleado</th>
            <th>Salario</th>
            <th>Desde</th>
            <th>Hasta</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.first_name @item.last_name (@item.emp_no)</td>
                <td>@item.salary.ToString("C", CultureInfo.GetCultureInfo("en-US"))</td>
                <td>@item.from_date</td>
                <td>
                    @if (item.to_date.HasValue)
                    {
                        @item.to_date.Value.ToString("dd/MM/yyyy")
                    }
                    else
                    {
                        <span class="text-success">Vigente</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a href="@Url.Action("Index", "Salarios")" class="btn btn-primary">Volver a Salarios</a>
</p>




