@model List<SistemaGestionNomina.Models.EmpleadoSalarioActual>
@using System.Globalization;

<h2>Salarios actuales</h2>

<div class="d-flex justify-content-end mb-2">
    <a href="@Url.Action("Index", "AuditoriaSalarios")" class="btn btn-primary">
        Ver Auditorï¿½a
    </a>
</div>

<table class="table table-striped table-bordered">

<h2>Salarios actuales</h2>
<table class="table">
    <thead>
        <tr>
            <th>Empleado</th>
            <th>CI</th>
            <th>Salario</th>
            <th>Desde</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.first_name @e.last_name</td>
                <td>@e.ci</td>
                <td>@e.salary.ToString("C", CultureInfo.GetCultureInfo("en-US"))</td>
                <td>@(e.from_date?.ToString("yyyy-MM-dd") ?? "")</td>
                <td>
                    <a href="@Url.Action("Historial", "Salarios", new { id = e.emp_no })" class="btn btn-sm btn-info">Ver historial</a>
                    <a href="@Url.Action("AsignarSalario", "Salarios", new { emp_no = e.emp_no })" class="btn btn-sm btn-warning">Asignar salario</a>
                
                </td>
                    
            </tr>
        }
    </tbody>
</table>

@if (ViewBag.TotalPaginas > 1)
{
    <nav>
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
            {
                <li class="page-item @(i == ViewBag.PaginaActual ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { pagina = i })">@i</a>
                </li>
            }
        </ul>
    </nav>
}

