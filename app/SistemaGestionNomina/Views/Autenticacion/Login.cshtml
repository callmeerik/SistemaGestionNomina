@model SistemaGestionNomina.Models.Usuario

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Iniciar Sesión</h2>

@using (Html.BeginForm("Login", "Autenticacion", FormMethod.Post))
{
    <div>
        <label>Usuario:</label>
        @Html.TextBoxFor(m => m.usuario, new { placeholder = "Ingrese su usuario" })
    </div>
    <div>
        <label>Clave:</label>
        @Html.PasswordFor(m => m.clave, new { placeholder = "Ingrese su contraseña" })
    </div>
    <div>
        <button type="submit">Ingresar</button>
    </div>
}

@if (ViewBag.Error != null)
{
    <p style="color:red;">@ViewBag.Error</p>
}
