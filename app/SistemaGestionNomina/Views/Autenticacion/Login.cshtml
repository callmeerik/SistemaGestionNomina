@model SistemaGestionNomina.Models.Usuario

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container d-flex align-items-center justify-content-center" style="min-height: 100vh;">
    <div class="card shadow-lg p-4" style="width: 400px; border-radius: 15px;">
        <h3 class="text-center mb-4">Iniciar Sesión</h3>

        @using (Html.BeginForm("Login", "Autenticacion", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
        {
            <div class="form-group mb-3">
                <label for="usuario" class="form-label">Usuario</label>
                @Html.TextBoxFor(m => m.usuario, new { @class = "form-control", placeholder = "Ingrese su usuario", required = "required" })
            </div>

            <div class="form-group mb-3">
                <label for="clave" class="form-label">Contraseña</label>
                @Html.PasswordFor(m => m.clave, new { @class = "form-control", placeholder = "Ingrese su contraseña", required = "required" })
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-block">Ingresar</button>
            </div>
        }

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mt-3 text-center">
                @ViewBag.Error
            </div>
        }
    </div>
</div>
