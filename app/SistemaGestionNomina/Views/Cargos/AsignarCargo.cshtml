@model SistemaGestionNomina.Models.Cargos
@{
    ViewBag.Title = "Asignar Cargo";
}

<h2 class="mb-4">Asignar Cargo</h2>

@using (Html.BeginForm("AsignarCargo", "Cargos", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.emp_no)

    <div class="form-group mb-3">
        <label>Cédula</label>
        @Html.TextBoxFor(m => m.ci, new { @class = "form-control", @readonly = "readonly" })
    </div>

    <div class="form-group mb-3">
        <label>Nombre Completo</label>
        @Html.TextBoxFor(m => m.NombreCompleto, new { @class = "form-control", @readonly = "readonly" })
    </div>

    <div class="form-group mb-3">
        <label>Nuevo Cargo</label>
        <input type="text" name="title" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a href="@Url.Action("Index", "Cargos")" class="btn btn-secondary ms-2">Volver a la lista</a>
}
