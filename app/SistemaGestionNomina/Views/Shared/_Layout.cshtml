

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Sistema de Gestion de Nomina", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Alternar navegación" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>

                    @if (Session["UserRole"] != null)
                    {
                        if (Session["UserRole"].ToString() == "Admin")

                        {

                            // Aqui agregar lo que hace falta para Admin
                            <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Administrar Usuarios", "Index", "Users", new { area = "" }, new { @class = "nav-link" })</li>
                        }
                        if (Session["UserRole"].ToString() == "RRHH")
                        {
                            // Aqui agregar lo que hace falta para RRHH
                            <li>@Html.ActionLink("Empleados", "Listado", "Empleados", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Departamentos", "", "Departamentos", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Cargos", "", "Cargos", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Salarios", "", "Salarios", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Reportes", "", "Reportes", new { area = "" }, new { @class = "nav-link" })</li>
                        }
                    }
                </ul>

                <ul class="navbar-nav">
                    @if (Session["UserName"] != null)
                    {
                        <li class="nav-item">
                            <span class="nav-link text-white">Hola, @Session["UserName"] (@Session["UserRole"])</span>
                        </li>
                        <li>@Html.ActionLink("Cerrar Sesión", "Logout", "Autenticacion", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Login", "Login", "Autenticacion", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Registrarse", "Register", "Autenticacion", new { area = "" }, new { @class = "nav-link" })</li>
                    }

                </ul>
            </div>


        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
