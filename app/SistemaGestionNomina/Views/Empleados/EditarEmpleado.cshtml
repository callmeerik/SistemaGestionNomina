
@model SistemaGestionNomina.Models.Empleados

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Editar Empleado</title>
</head>
<body>

    <h1>Edición de Empleado</h1>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

<form method="post" action="@Url.Action("EditarEmpleado","Empleados")">
    <input type="hidden" name="emp_no" value="@Model.emp_no" />

    <div class="form-group">
        <label>Cédula</label>
        <input type="text" name="ci" class="form-control" value="@Model.ci" readonly/>
    </div>

    <div class="form-group">
        <label>Nombre</label>
        <input type="text" name="first_name" class="form-control" value="@Model.first_name" required />
    </div>

    <div class="form-group">
        <label>Apellido</label>
        <input type="text" name="last_name" class="form-control" value="@Model.last_name" required />
    </div>

    <div class="form-group">
        <label>Correo</label>
        <input type="email" name="correo" class="form-control" value="@Model.correo" required />
    </div>

    <div class="form-group">
        <label>Género</label>
        <select name="gender" class="form-control">
            <option value="M" @(Model.gender == 'M' ? "selected" : "")>Masculino</option>
            <option value="F" @(Model.gender == 'F' ? "selected" : "")>Femenino</option>
        </select>
    </div>

    <div class="form-group">
        <label>Fecha de nacimiento</label>
        <input type="text" name="birth_date" class="form-control" value="@Model.birth_date.ToString("yyyy-MM-dd")" readonly />
    </div>

    <div class="form-group">
        <label>Fecha de ingreso</label>
        <input type="text" name="hire_date" class="form-control" value="@Model.hire_date.ToString("yyyy-MM-dd")" readonly />
    </div>

    <div class="form-group">
        <label>Actualización de Clave</label>
        <input type="password" name="clave" class="form-control" value=""/>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a href="@Url.Action("Index","Empleados")" class="btn btn-secondary">Cancelar</a>
</form>

</body>
</html>

